      <Word>&lt;y&gt;</Word>
      <Word>&lt;dpad&gt;</Word>
      <Word>&lt;triangle&gt;</Word>
      <Word>&lt;square&gt;</Word>
      <Word>&lt;heart&gt;</Word>
      <Word>&lt;diamond&gt;</Word>
      <Word>&lt;club&gt;</Word>
      <Word>&lt;spade&gt;</Word>
      <Word>&lt;circle&gt;</Word>
      <Word>&lt;male&gt;</Word>
      <Word>&lt;female&gt;</Word>
      <Word>&lt;music&gt;</Word>
      <Word>&lt;music-beam&gt;</Word>
      <Word>&lt;rupee&gt;</Word>
      <Word>&lt;right-tri&gt;</Word>
      <Word>&lt;left-tri&gt;</Word>
      <Word>&lt;invalid&gt;</Word>
