    <!-- Alignment Keywords -->
    <Keywords fontStyle="italic" fontWeight="bold">
      <Word>&lt;align-left&gt;</Word>
      <Word>&lt;align-center&gt;</Word>
      <Word>&lt;align-right&gt;</Word>
    </Keywords>
    
    <!-- Color Keywords -->
    <Keywords foreground="#F80828">
      <Word>&lt;red&gt;</Word>
    </Keywords>
    <Keywords foreground="#10A840">
      <Word>&lt;green&gt;</Word>
    </Keywords>
    <Keywords foreground="#1880F8">
      <Word>&lt;blue&gt;</Word>
    </Keywords>
    <Keywords foreground="#F87808">
      <Word>&lt;orange&gt;</Word>
    </Keywords>

    <!-- Variable Keywords -->
    <Rule fontStyle="italic">
      &lt;f?var\:.*&gt;
    </Rule>
  </RuleSet>
</SyntaxDefinition>